!ALGORITHM algorithm_name
VAR
     c:CHAR="";
     L:INTEGER=0;
     v:INTEGER=0;
     s:INTEGER=1;
BEGIN
WHILE (c#"")or(c#".") DO
    write("donner c");
    read (c);
    L=L+1;
if(c="a"or c="A"or c="i"or c="I" or
c="e"or c="E"or c="o"or c="O" or
c="u"or c="U")
then 
v=v+1;
if(c=" ")
then
s=s+1;
END_WHILE
write("The length of the sentenceis"+L );
write("The number of vowels in the sentence"+v);
write("The number of words in the sentence"+s);
END